{
  "name": "hlsjs-wrapper",
  "version": "2.0.8",
  "main": "./lib/streamroot-wrapper",
  "scripts": {
    "build": "browserify -d -s HlsjsWrapper lib/streamroot-wrapper -o dist/streamroot-wrapper.js",
    "bundle": "browserify -d -s StreamrootBundle lib/streamroot-bundle -o dist/streamroot-bundle.js",
    "test": "mocha --require mochahook",
    "debug": "iron-mocha --require mochahook"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "babelify": "^6.1.3",
    "browserify": "~2.35",
    "url": "^0.11.0"
  },
  "optionalDependencies": {
    "streamroot-p2p-dist": "http://sdk.streamroot.io/npm/streamroot-p2p-dist-3.0.13.tar.gz"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "grunt": "^0.4.5",
    "grunt-bump": "^0.6.0",
    "grunt-clean-repo": "0.2.2",
    "grunt-shell": "^1.1.2",
    "matchdep": "0.3.0",
    "should": "^8.1.1"
  }
}
